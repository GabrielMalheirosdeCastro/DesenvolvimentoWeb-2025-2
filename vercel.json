{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/tipografia.html",
      "destination": "/tipografia.html"
    },
    {
      "source": "/lab-fundamentos-css.html", 
      "destination": "/lab-fundamentos-css.html"
    },
    {
      "source": "/galeria-lego-naves.html",
      "destination": "/galeria-lego-naves.html"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ]
}